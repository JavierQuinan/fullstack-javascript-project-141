extends ../layout.pug

block content
  if flash
    .alert(class=`alert-${flash.type}` role='alert')= flash.message
  h2 Editar estado
  form(action=`/statuses/${status.id}` method='post')
    input(type='hidden' name='_method' value='PATCH')
    .mb-3
      label.form-label(for='data_name') Nombre
      input.form-control(type='text' id='data_name' name='data[name]' value=status.name required minlength='1')
    button.btn.btn-primary(type='submit') Guardar
